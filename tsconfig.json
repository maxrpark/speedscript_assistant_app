{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "rootDir": "./ts-files",

    "outDir": "./assets",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    // add node modules to the path
    "paths": {
      "speedscript": ["./node_modules/speedscript/lib/index.js"]
    }
  }
  // "exclude": ["node_modules"]
}
